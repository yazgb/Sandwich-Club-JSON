<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.udacity.sandwichclub.DetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/sandwich_picture_content_description"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/also_known_tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/detail_also_known_as_label"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:layout_below="@+id/image_iv"/>

        <TextView
            android:id="@+id/also_known_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            tools:text="@string/known_as"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:layout_alignBaseline="@+id/also_known_tv_label"
            android:layout_toRightOf="@id/also_known_tv_label"
            android:layout_toEndOf="@id/also_known_tv_label"/>

        <TextView
            android:id="@+id/origin_tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/detail_place_of_origin_label"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:layout_alignBaseline="@+id/also_known_tv_label"
            android:layout_toRightOf="@id/also_known_tv"
            android:layout_toEndOf="@id/also_known_tv"/>

        <TextView
            android:id="@+id/origin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            tools:text="@string/origin"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:layout_alignBaseline="@+id/origin_tv_label"
            android:layout_toRightOf="@id/origin_tv_label"
            android:layout_toEndOf="@id/origin_tv_label"/>

        <TextView
            android:id="@+id/ingredients_tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/detail_ingredients_label"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:layout_below="@id/also_known_tv"/>

        <TextView
            android:id="@+id/ingredients_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            tools:text="@string/ingredients"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:layout_alignBaseline="@id/ingredients_tv_label"
            android:layout_toRightOf="@id/ingredients_tv_label"
            android:layout_toEndOf="@id/ingredients_tv_label"/>

        <TextView
            android:id="@+id/description_tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/detail_description_label"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:layout_below="@id/ingredients_tv"/>

        <TextView
            android:id="@+id/description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            tools:text="@string/description"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:layout_alignBaseline="@id/description_tv_label"
            android:layout_toRightOf="@id/description_tv_label"
            android:layout_toEndOf="@id/description_tv_label"/>
    </RelativeLayout>
</ScrollView>